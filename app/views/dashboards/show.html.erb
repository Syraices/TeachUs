<br />
<div class="booyah-box col-10 offset-1">
  <h1>My Enrollments</h1>
  <% current_user.enrolled_courses.each do |course| %>
    <h3 class="text-center"><%= link_to course.title, course_path(course) %></h3>
    <% if course.image.present? %>
    <br />
      <%= image_tag course.image.url, class: 'img-fluid' %>
    <br />  
      <%= course.description %>
    <% end %>
    <hr class="col-8 offset-2">
    <br clear="clr" />
  <% end %>

  <h1>My Courses</h1>
  <% current_user.courses.each do |course| %>
    <h3 class="text-center">
      <%= link_to course.title, course_path(course) %>
    </h3>
    <br />
      <% if course.image.present? %>
        <%= image_tag course.image.url, class: 'img-fluid' %>
      <% end %>
    <br />
      <%= course.description %>
    <hr class="col-8 offset-2">
    <br clear="clr" />
  <% end %>
</div>